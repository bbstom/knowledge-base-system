# 服务器配置
PORT=3001
NODE_ENV=production

# JWT 密钥（请修改为随机字符串）
JWT_SECRET=your-secret-key-change-this

# 数据库配置（通过后台管理界面配置，或手动填写）
USER_MONGO_URI=mongodb://username:password@host:port/database?authSource=admin
QUERY_MONGO_URI=mongodb://username:password@host:port/database?authSource=admin

# 邮件配置（通过后台管理界面配置，或手动填写）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# 加密密钥（用于加密敏感数据，请修改为随机字符串）
ENCRYPTION_KEY=your-encryption-key-32-characters-long

# 前端URL（用于邮件链接等）
FRONTEND_URL=https://your-domain.com

# 时区配置
TZ=Asia/Shanghai
